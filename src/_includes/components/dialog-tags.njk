<dialog id="dialog-tags" class="left no-padding">
    <nav class="drawer">
        <header>
            <nav>
                <div class="row max truncate">
                    {% include "components/profile.njk" %}
                    <h6 class="max">All tags</h6>
                </div>
                <div class="row">
                    <a class="button circle large border" href="/tags/" target="_blank">
                        <i>{% icon "mdi:open-in-new" %}</i>
                        <div class="tooltip bottom">Open in New Tab</div>
                    </a>
                    <button class="transparent circle" data-ui="#dialog-tags">
                        <i>{% icon "mdi:close" %}</i>
                    </button>
                </div>
            </nav>
        </header>
        {% for tag in collections.tagsList %}
        <a href="/tags/{{ tag | slug }}/" {% if page.url == '/tags/' ~ (tag | slug) ~ '/' %} class="active"{% endif %}>
            <i>{% icon "mdi:pound" %}</i>
            {{ tag }}
        </a>        
        {% endfor %}
      </nav>
</dialog>